#------------------------------
# shortcuts
#------------------------------
# use rofi instead of dmenu,
# add equivalent of "alt+Tab functionality"
bindsym $mod+d       exec "rofi -show run"
bindsym $mod+Tab     exec "rofi -show window"
bindsym $mod+Shift+s exec "rofi -show ssh"
bindsym $mod+Shift+w exec ~/.config/i3/bin/jump_workspace.bash
# changing workspaces 2by2
bindsym $mod+Control+Left exec ~/.config/i3/bin/change_workspace.bash 0
bindsym $mod+Control+Right exec ~/.config/i3/bin/change_workspace.bash 1
# output
bindsym $mod+Prior move workspace to output right
bindsym $mod+Next move workspace to output left
# scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show
# locker
bindsym $mod+Shift+l exec "PATH=~/.config/i3/bin/i3lock/i3lock-color:$PATH ~/.config/i3/bin/i3lock/i3lock-fancy/lock -f Lato-Hairline"
# terminals
bindsym $mod+Return exec terminator -p nc-madec
bindsym $mod+Shift+Return exec i3-sensible-terminal
# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 1 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 1 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 1 toggle # mute sound
# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness
# Screen output
bindsym XF86Search exec ~/.config/i3/bin/change_layout
# print screen - scrot & pinta - root
bindsym --release Print exec scrot -e 'mv $f /tmp/ && pinta /tmp/$f'
# print screen - scrot & pinta - select window or rectangle
bindsym --release Shift+Print exec scrot -s -e 'mv $f /tmp/ && pinta /tmp/$f'

