#------------------------------
# colors
#------------------------------
set $black    #45403d
set $bg       #504945
set $darkgray #7c6f64
set $gray     #928374
set $white    #e2cca9
set $aqua     #80aa9e
set $darkblue #404946
set $red      #f2594b

bar {
  position top
  colors {
    background $bg
    separator  $gray
    #                  border  bg        text
    focused_workspace  $gray   $darkblue $white
    active_workspace   $gray   $black    $white
    inactive_workspace $bg     $darkgray $white
  }
  separator_symbol "│"
  # Using custom i3status.conf
  status_command py3status -c ~/.config/i3/i3status.conf
  # provides a system tray area where programs such as NetworkManager, VLC, Pidgin, etc
  tray_output primary
}
# exec_always --no-startup-id $HOME/.config/polybar/launch.sh

# class                 border backgr    text   indicator child_border
client.focused          $bg    $darkblue $white $aqua     $gray
client.focused_inactive $bg    $black    $white $aqua     $bg
client.unfocused        $bg    $darkgray $white $aqua     $bg
client.urgent           $red   $red      $white $aqua     $red

#------------------------------
# i3-gaps
#------------------------------
set $inner_gaps 8
set $outer_gaps 0
set $border 2
for_window [class="^.*"] border pixel $border
gaps inner $inner_gaps
gaps outer $outer_gaps
smart_borders on
smart_gaps on
bindsym $mod+Shift+g  exec --no-startup-id ~/.config/i3/bin/toggle_gaps "toggle" $inner_gaps $outer_gaps
bindsym $mod+Shift+t  exec --no-startup-id ~/.config/i3/bin/toggle_gaps "toggle_title" $inner_gaps $outer_gaps $border

#------------------------------
# shortcuts
#------------------------------
bindsym $mod+backslash workspace back_and_forth
bindsym $mod+c  exec --no-startup-id gnome-calculator
# use rofi instead of dmenu,
# add equivalent of "alt+Tab functionality"
bindsym $mod+d       exec "PATH=~/bin:~/bin_local:$PATH rofi -show drun"
bindsym $mod+Tab     exec "exec rofi -show window"
bindsym $mod+Shift+s exec "exec rofi -show ssh"
bindsym $mod+Shift+w  exec --no-startup-id ~/.config/i3/bin/rofi_workspace
bindsym $mod+Shift+u  exec --no-startup-id ~/.config/i3/bin/rofi_unicode
bindsym $mod+Shift+a  exec --no-startup-id ~/.config/i3/bin/rofi_accent
# changing workspaces
bindsym $mod+Control+Left  exec --no-startup-id ~/.config/i3/bin/change_workspace 0
bindsym $mod+Control+Right  exec --no-startup-id ~/.config/i3/bin/change_workspace 1
bindsym $mod+Control+Shift+Left  exec --no-startup-id ~/.config/i3/bin/change_workspace 0 1
bindsym $mod+Control+Shift+Right  exec --no-startup-id ~/.config/i3/bin/change_workspace 1 1
# output
bindsym $mod+Next focus output left
bindsym $mod+Prior focus output right
bindsym $mod+Shift+Next move workspace to output left
bindsym $mod+Shift+Prior move workspace to output right
# scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show
exec --no-startup-id exec alacritty -t vim_todo -e bash -ic "nvim ~/org/todo_*.txt -p"
bindsym $mod+t [title="vim_todo"] scratchpad show
exec --no-startup-id exec Thunar&
bindsym $mod+m [class="Thunar"] scratchpad show; [class="Thunar"] move position center
# locker
bindsym $mod+Shift+l exec "PATH=~/.config/i3/bin/i3lock/i3lock-color:$PATH ~/.config/i3/bin/i3lock/i3lock-fancy/lock -f Lato-Hairline"
# terminals
bindsym $mod+Return exec [ -f ~/remote_machine.txt ] && exec alacritty -e "ssh -X $(cat ~/remote_machine.txt)" \
  || notify-send 'i3' 'please populate ~/remote_machine.txt'
bindsym $mod+Shift+Return exec --no-startup-id exec alacritty
# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound
# brightness
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 20 # decrease screen brightness
# change layout
bindsym $mod+l exec --no-startup-id exec ~/.config/i3/bin/change_layout
# print screen
bindsym --release Print  exec --no-startup-id scrot -e 'mv $f /tmp/ && pinta /tmp/$f'
# print screen - select window or rectangle
bindsym --release Shift+Print  exec --no-startup-id scrot -s -e 'mv $f /tmp/ && pinta /tmp/$f'

