#!/usr/bin/env sh

lock="ðŸ”’ lock screen"
logout="ðŸšª log out"
reboot="âž° reboot"
shut_down="ðŸ”Œ shut down"

choice="$(echo "$lock
$logout
$reboot
$shut_down" | rofi -dmenu -p "power menu")"

case "$choice" in
  "$lock")
    i3lock -i ~/.config/i3/wallpaper/warm_poly.png -t
    ;;
  "$logout")
    loginctl terminate-session $XDG_SESSION_ID
    ;;
  "$reboot")
    systemctl reboot
    ;;
  "$shut_down")
    systemctl poweroff
    ;;
esac

