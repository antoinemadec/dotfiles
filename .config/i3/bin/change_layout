#!/bin/bash

cl_dir=~/.screenlayout
cl_file=$cl_dir/current_layout.txt

current_layout="$(cat $cl_file)"
current_layout=$(( (current_layout+1) % 3 ))
cmd="$(ls $cl_dir/*sh -1 | head -n$((current_layout + 1)) | tail -n1)"
name="$(basename $cmd | sed 's/\..*//')"

$cmd
notify-send --icon=/usr/share/icons/gnome/256x256/devices/video-display.png 'layout' $(echo $name)

echo $current_layout > $cl_file
