#!/bin/bash

set -e

mkdir -p ~/src
cd ~/src

if !(git clone https://www.github.com/Airblader/i3 i3-gaps)
then
  cd i3-gaps
  git pull
else
  cd i3-gaps
fi

autoreconf --force --install
rm -rf build
mkdir -p build && cd build
../configure --prefix=/usr --sysconfdir=/etc --disable-sanitizers
make
sudo make install
