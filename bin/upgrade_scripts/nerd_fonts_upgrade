#!/bin/bash

set -e

FONTS="DejaVuSansMono FiraCode Inconsolata SourceCodePro"

for font in $FONTS; do
  dir=$(mktemp -d)
  cd $dir
  wget https://github.com/ryanoasis/nerd-fonts/releases/latest/download/$font.zip
  unzip *.zip
  rm *.zip

  mkdir -p ~/.fonts/$font
  cd ~/.fonts/$font
  rm -f *
  cp $dir/* .

  rm -rf $dir
done

fc-cache
