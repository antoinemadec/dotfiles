#!/bin/bash

set -e

mkdir -p ~/src
cd ~/src

if !(git clone https://github.com/neovim/neovim)
then
  cd neovim
  git pull
else
  cd neovim
fi

sudo pip3 install neovim-remote --upgrade
sudo pip3 install pynvim --upgrade
sudo npm install -g neovim

make CMAKE_BUILD_TYPE=Release -j4
sudo make install
