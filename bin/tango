#!/bin/bash

tango_list=$( ls ~/tango | grep tango | sed 's/tango//' | sed 's/_//')

suffix=""
while [ $# -gt 0 ]; do
  arg=$1
  case $arg in
    -h|-help)
     echo "$(basename $0) <tango_checkout>"
     echo "<tango_checkout> in:"
     echo "$tango_list"
     exit 0
    ;;
    -list)
     echo "$tango_list"
     exit 0
    ;;
    *)
      suffix="_$1"
    ;;
  esac
  shift
done


cd ~/tango/tango$suffix

source utils/bin/tango.bashrc
source /utils/scripts/verilog.bashrc
source /utils/scripts/simvision.bashrc
source /utils/scripts/UXE.bashrc
source /utils/scripts/Veloce.bashrc

exec $SHELL -i
