#!/bin/bash

set -e

usage(){
cat <<EOF
usage: $(basename $0) (nvim) (-f FILE)
EOF
}

cmd="nvim"
file="~/.vimrc"
while [ "$#" -gt 0 ]
do
  case "$1" in
    -h) usage
        exit 0
        ;;
    -f) shift 1
        file=$(readlink -e $1)
        shift 1
        ;;
    *)  cmd="$1"
        shift 1
        ;;
  esac
done

rm -rf ${cmd}_profile
mkdir -p ${cmd}_profile
cd ${cmd}_profile

eval $cmd $file --startuptime profile.txt
grep packer profile.txt | sed 's/^\S* *//' | sort -nr > packer.txt

eval $cmd profile.txt packer.txt -o
