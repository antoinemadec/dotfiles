#!/bin/bash

set -e

[ "$#" = 0 ] && { echo "ERROR: missing arguments"; exit 1; }

name=""
date=""
novim=0
while [ "$#" -gt 0 ]
do
  case "$1" in
    -d) date="$(date +%Y%m%d)"
        shift 1
      ;;
    -n) novim=1
        shift 1
      ;;
    *)  name="$1"
        shift 1
      ;;
  esac
done

if [ "$name" = "" ]
then
  name="$date"
elif [ "$date" != "" ]
then
  [ "${name: -1}" != '_' ] && name+='_'
  name+="$date"
fi
name+='.txt'

if [ ! -e "$name" ]
then
  touch $name
  echo '# vim: ft=indentcolor spell' > "$name"
  echo '' >> "$name"
  [ "$novim" = 1 ] || $EDITOR "$name"
else
  echo "ERROR: $name already exists"
  exit 1
fi
