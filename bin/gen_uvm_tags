#!/bin/bash

set -e

if [ "$1" = "" ]
then
  echo "ERROR: please provide UVM directory"
  exit 1
else
  uvm_dir="$(readlink -e $1)"
fi

mkdir -p ~/.vim/tags
filename="$(echo $uvm_dir | sed 's#^.*/\(.*\)/\(.*\)$#\1_\2#')"

find -L "$uvm_dir" -regex '.*\.\(sv\|svh\|svi\|v\)' -type f | grep -v '/docs/' | grep -v examples | uctags --languages=systemverilog -L - -f ~/.vim/tags/$filename
